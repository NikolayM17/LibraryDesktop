		<Style x:Key="cellStyle" TargetType="DataGridCell">
			<Setter Property="Padding" Value="0" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="Background" Value="Bisque" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="DataGridCell">
						<Border Background="Bisque" BorderThickness="0">
							<Border x:Name="border"
                              BorderBrush="Bisque"
                              BorderThickness="1"
                              Background="Bisque"
                              CornerRadius="5">
								<ContentPresenter />
							</Border>
						</Border>
						<ControlTemplate.Triggers>
							<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="true">
								<Setter TargetName="border" Property="Background" Value="Bisque"/>
							</DataTrigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="rowStyle" TargetType="DataGridRow">
			<Setter Property="Padding" Value="0" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Background" Value="Black" />
		</Style>

		<Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
			<Setter Property="Background" Value="#FF9001FF"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="Century Gothic"/>
			<Setter Property="FontSize" Value="15"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="White"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
						<Border VerticalAlignment="{TemplateBinding VerticalAlignment}" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#FFEED9FF" CornerRadius="3">
							<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}"
											  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#FF9001FF"/>
			<Setter Property="BorderThickness" Value="5"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type DataGridCell}">
						<Border VerticalAlignment="{TemplateBinding VerticalAlignment}" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#FF9001FF" CornerRadius="3">
							<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}"
											  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
